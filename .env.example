# LSS-Verband-Tool Environment Configuration

# Leitstellenspiel Login Credentials (REQUIRED)
LSS_EMAIL=your-email@example.com
LSS_PASSWORD=your-password

# Scraper Settings - Intervals in milliseconds
LSS_MISSION_LIST_INTERVAL_MS=1000
LSS_MISSION_DETAILS_INTERVAL_MS=15000
LSS_ALLIANCE_STATS_INTERVAL_MS=300000
LSS_MEMBER_TRACKING_INTERVAL_MS=60000

# Scraper HTTP Details Configuration
LSS_HTTP_DETAILS_ENABLED=true
LSS_HTTP_DETAILS_PARALLEL=5
LSS_HTTP_DETAILS_BATCH_DELAY_MS=500

# Browser Configuration
LSS_HEADLESS=true
PUPPETEER_EXECUTABLE_PATH=/usr/bin/chromium-browser

# Excluded members (comma-separated usernames or IDs)
# These members won't appear in member lists or online counts
LSS_EXCLUDED_MEMBERS=RETT-DE-Safe-Acc

# Database (REQUIRED)
# Individual credentials for docker-compose
POSTGRES_USER=lss
POSTGRES_PASSWORD=CHANGE_ME_GENERATE_SECURE_PASSWORD
POSTGRES_DB=lss_tool

# Full database connection URL (constructed from above or set directly)
# Format: postgresql://user:password@host:port/database
DATABASE_URL=postgresql://lss:CHANGE_ME_GENERATE_SECURE_PASSWORD@postgres:5432/lss_tool

# Server Configuration (optional)
API_PORT=3001
API_HOST=0.0.0.0
VITE_API_URL=http://localhost:3001

# Authentication
# Admin account credentials - will be created/updated on server start
ADMIN_USERNAME=admin
ADMIN_PASSWORD=your-secure-admin-password

# Node Environment
NODE_ENV=development

# Logging (optional)
# Levels: fatal, error, warn, info, debug, trace
LOG_LEVEL=info

# Data Retention (optional - defaults shown)
# Incidents are deleted after X days (game closes them after max 2 days)
DATA_RETENTION_INCIDENTS_DAYS=4
# Member activity logs (online/offline) are deleted after X days
DATA_RETENTION_ACTIVITY_DAYS=30
# Alliance stats are aggregated to 1 entry/day after X days (never deleted)
DATA_RETENTION_STATS_AGGREGATE_DAYS=30

# CORS Configuration (IMPORTANT for production!)
# Set to your domain - NEVER use '*' in production!
# Example: https://verband.example.de
CORS_ORIGIN=https://your-domain.example.de

# Email Notifications (optional)
# Configure SMTP settings to receive email alerts for critical errors
# Leave empty to disable email notifications
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-password
SMTP_FROM=LSS Verband Tool <your-email@gmail.com>
ALERT_EMAIL=admin@example.com
